<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vehicle_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view">

                <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view">

                <Spinner
                    android:id="@+id/model_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view">

                <Spinner
                    android:id="@+id/year_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view">

                <Spinner
                    android:id="@+id/seat_no_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/premium_facilities_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:visibility="gone"
                android:background="@drawable/rounded_view_edit_text"
                >
                <CheckBox
                    android:id="@+id/chk_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/grey1"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <CheckBox
                    android:id="@+id/chk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t_v"
                    android:textSize="14sp"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:textColor="@color/grey1"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/chk_wifi"/>

                <CheckBox
                    android:id="@+id/chk_luxury_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luxury_seats"
                    android:textSize="14sp"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:textColor="@color/grey1"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/chk_tv"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/rate_txt"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view"
                android:gravity="center|left"
                android:hint="Service Rate($)(/Km)"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:textColor="@color/green"
                android:textColorHint="@color/grey_clr"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/input_num"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view"
                android:hint="@string/vehicle_num"
                android:inputType="text"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:textColor="@color/green"
                android:textColorHint="@color/grey_clr"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_color"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/rounded_view"
                android:hint="@string/vehicle_color"
                android:inputType="text"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:textColor="@color/green"
                android:textColorHint="@color/grey_clr"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/carpic_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Upload Car Pic"
                    android:textColor="@color/grey_clr"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="135dp">

                    <ImageView
                        android:id="@+id/car_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_upload_pic" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/licence_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="UPLOAD Driver's License"
                    android:textColor="@color/grey_clr"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/licence_img"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_upload_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/licence_issue_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Issue Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/licence_expire_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Expire Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_inspection_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/upload_vehicle_inspection"
                    android:textColor="@color/grey_clr"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/vehicle_inspection_img"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_upload_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/car_inspection_issue_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Issue Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/car_inspection_expire_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Expire Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Upload TNC/INSURANCE"
                    android:textColor="@color/grey_clr"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/insurance_img"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_upload_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/insurance_issue_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Issue Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/insurance_expire_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/rounded_view"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="Expire Date"
                            android:padding="@dimen/margin_10"
                            android:textAlignment="center"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_registration_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Upload Car Registration"
                    android:textColor="@color/grey_clr"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/car_registration"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_upload_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/car_registration_issue_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="Issue Date"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:padding="@dimen/margin_10"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/rounded_view"
                            android:layout_marginBottom="@dimen/margin_5"
                            />

                        <TextView
                            android:id="@+id/car_registration_expire_date"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="Expire Date"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/margin_5"
                            android:padding="@dimen/margin_10"
                            android:textColor="@color/grey1"
                            android:textColorHint="@color/grey1"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/rounded_view"
                            />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSaveVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@drawable/ronded_button1"
                    android:text="Save"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@drawable/ronded_button1"
                    android:text="@string/cancel"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

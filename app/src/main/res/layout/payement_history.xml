<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rideshare">

    <ImageView
        android:id="@+id/noDataImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/earning_layout"
        android:background="@drawable/ic_no_data"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noDataImg"
        android:layout_centerInParent="true"
        android:text="@string/nodata_found"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />


    <include
        android:id="@+id/chart_layout"
        layout="@layout/layout_earning_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5" />


    <androidx.cardview.widget.CardView
        android:id="@+id/earning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:elevation="@dimen/margin_10"
        android:layout_below="@id/chart_layout"
        app:cardCornerRadius="@dimen/margin_10">

        <RelativeLayout
            android:background="@drawable/form_outline_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Total Earning ($)"
                    android:textColor="@color/greenOnline"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_total_earning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="$0.00"
                    android:textColor="@color/greenOnline"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/datePicker"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_calander_icon_payment" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/earning_layout"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical" />

</RelativeLayout>
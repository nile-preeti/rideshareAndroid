<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_rideshare"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapview_payment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:clickable="false"
                    android:apiKey="@string/google_android_map_api_key"
                    android:enabled="true"/>

                <ImageView
                    android:id="@+id/car_image"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:rotation="0"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Taxi"
                    android:visibility="gone"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="RIDE PAYMENT DETAIL"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:background="@color/liner" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_child1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_outline_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    >


                    <TableRow
                        android:id="@+id/pickupaddress_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/pickupaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Pickup Address       "
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_pickupaddress"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:inputType="textMultiLine"
                            android:text="W90th ,Newyork ,NY 10025"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/dropaddressrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/dropaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop Address       "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_dropaddress"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="2"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_regular"
                            android:scrollHorizontally="true"
                            android:text="46th Ave,Woodside Ny 11101"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/amount_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount       "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=" "
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tip_amount_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:visibility="gone"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tip_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tip Amount       "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_tip_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=" "
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/distance_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance        "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text=" "
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/rider_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/riderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Rider        "
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_riderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=""
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/status_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status        "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="ACCEPTED"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/paymentstatus_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/paymentstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Status        "
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_paymentstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="paid"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/datetime_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/datetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Date &amp; Time        "
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/txt_datetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="2017-04-12 10:24:43"
                            android:textColor="@color/white"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </TableRow>

                </TableLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDE4E8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_trackride"
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_child1"
                    android:layout_marginBottom="@dimen/detail_bottom_margin"
                    android:layout_marginTop="@dimen/detail_bottom_margin"
                    android:background="@drawable/detail_button"
                    android:text="START DRIVING"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_complete"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_child1"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:layout_marginRight="@dimen/five_dp"
                        android:layout_weight="1"
                        android:background="@drawable/detail_button"
                        android:text="COMPLETE RIDE" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_child1"
                        android:layout_marginBottom="@dimen/detail_bottom_margin"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_weight="1"
                        android:background="@drawable/detail_button"
                        android:text="CANCEL RIDE" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
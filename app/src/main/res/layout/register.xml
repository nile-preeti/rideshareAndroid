<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rideshare">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@color/app_clr"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ToolBarStyle"
        app:titleTextColor="@color/white" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/height"
                        android:layout_height="@dimen/height"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/background_rideshare"
                        android:visibility="gone" />
                </RelativeLayout>


                <LinearLayout
                    android:weightSum="10"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_outline_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/name_title"
                        android:layout_width="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="55dp"
                        android:hint="@string/fname"
                        android:inputType="text"
                        android:paddingRight="@dimen/margin_15"
                        android:textColor="@color/white"
                        android:textColorHint="@color/background_white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_lname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:hint="@string/lname"
                    android:inputType="text"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white">

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/rounded_view"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:textColor="@color/white"
                        android:textColorHint="@color/background_white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white">

                    <EditText
                        android:id="@+id/input_confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/rounded_view"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:textColor="@color/white"
                        android:textColorHint="@color/background_white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <LinearLayout
                        android:id="@+id/spinerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_contentColor="@color/white"
                            app:ccp_customMasterCountries="US,AE,UAE"
                            app:ccp_defaultNameCode="US"
                            app:ccp_showFlag="true"
                            app:ccp_showFullName="false"
                            app:ccp_showNameCode="true"></com.hbb20.CountryCodePicker>


                    </LinearLayout>

                    <EditText
                        android:id="@+id/input_mobile"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/mobile_number"
                        android:inputType="number"
                        android:maxLength="14"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:textColor="@color/white"
                        android:textColorHint="@color/background_white"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/spinerLayout"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--                <EditText-->
                <!--                    android:id="@+id/input_mobile"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="55dp"-->
                <!--                    android:layout_marginTop="@dimen/margin_15"-->
                <!--                    android:background="@drawable/rounded_view"-->
                <!--                    android:hint="@string/mobile_number"-->
                <!--                    android:inputType="number"-->
                <!--                    android:paddingLeft="@dimen/margin_15"-->
                <!--                    android:paddingRight="@dimen/margin_15"-->
                <!--                    android:textColor="@color/grey1"-->
                <!--                    android:textColorHint="@color/grey1"-->
                <!--                    android:textCursorDrawable="@drawable/cursor"-->
                <!--                    android:textSize="14sp" />-->

                <TextView
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/ssnDetail"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/input_ssn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/rounded_view"
                    android:hint="@string/ssn_number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp"
                    android:visibility="visible" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <TextView
                        android:id="@+id/txt_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="DOB"
                        android:padding="@dimen/margin_15"
                        android:textColor="@color/white"
                        android:textColorHint="@color/background_white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/date_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/margin_10"
                        android:src="@drawable/ic_calander_icon_payment" />

                </RelativeLayout>


                <EditText
                    android:id="@+id/input_home_address"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/form_outline_background"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/icon_location"
                    android:drawablePadding="@dimen/_10sdp"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Address"
                    android:inputType="textMultiLine"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <Spinner
                        android:id="@+id/brand_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <Spinner
                        android:id="@+id/model_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <Spinner
                        android:id="@+id/year_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/input_color"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:hint="@string/vehicle_color"
                    android:inputType="text"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <Spinner
                        android:id="@+id/seat_no_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/premium_facilities_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view_edit_text"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/chk_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_5"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/wifi"
                        android:textColor="@color/grey1"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/chk_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_toEndOf="@id/chk_wifi"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/t_v"
                        android:textColor="@color/grey1"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/chk_luxury_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_toRightOf="@id/chk_tv"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/luxury_seats"
                        android:textColor="@color/grey1"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/rate_txt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:gravity="center|left"
                    android:hint="Service Rate($)(/Km)"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/grey1"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/input_num"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view"
                    android:hint="@string/vehicle_num"
                    android:inputType="text"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/avatar_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Upload Profile Photo"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="135dp">

                        <ImageView
                            android:id="@+id/avatar_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_upload_pic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/carpic_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Upload Car Pic"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="135dp">

                        <ImageView
                            android:id="@+id/car_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_upload_pic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@drawable/rounded_view">

                    <Spinner
                        android:id="@+id/identity_doc_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_identification_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/identification_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/upload_identity_document"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/identification_img"
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_upload_pic" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/identification_issue_date"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:background="@drawable/rounded_view"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Issue Date"
                                android:padding="@dimen/margin_10"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textColorHint="@color/background_white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/identification_expire_date"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@drawable/rounded_view"
                                android:fontFamily="@font/montserrat_regular"
                                android:hint="Expire Date"
                                android:padding="@dimen/margin_10"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textColorHint="@color/background_white"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/licence_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="UPLOAD Driver's License"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/licence_img"
                                android:layout_width="135dp"
                                android:layout_height="135dp"
                                android:layout_alignParentStart="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_upload_pic" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/margin_10"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/licence_issue_date"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    android:background="@drawable/rounded_view"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:hint="Issue Date"
                                    android:padding="@dimen/margin_10"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/background_white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/licence_expire_date"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:background="@drawable/rounded_view"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:hint="Expire Date"
                                    android:padding="@dimen/margin_10"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/background_white"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:background="@color/light_grey_clr"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/permit_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Permit"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:layout_marginLeft="@dimen/margin_15">

                            <ImageView
                                android:id="@+id/permit_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_upload" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/insurance_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Upload TNC/INSURANCE"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rideshare"
    android:orientation="vertical"
    tools:context=".fragement.HelpSubmitFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/rounded_view_edit_text"
                android:enabled="false"
                android:hint="Title"
                android:inputType="none"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/background_white"
                android:padding="@dimen/margin_10"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/rounded_view_edit_text"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="top|start"
                android:hint="@string/write_short_description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:textCursorDrawable="@color/white"
                android:maxLines="20"
                android:minLines="8"
                android:padding="@dimen/margin_10"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/background_white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="280dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/rounded_view"
                android:backgroundTint="@color/Brown"
                android:padding="@dimen/margin_10"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:padding="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey1"
                        android:orientation="horizontal"
                        android:padding="20sp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textAlignment="center"
                            android:text="Please get in touch we will be happy to help you"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="90dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:src="@drawable/chat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/grey1"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Please contact our helpline centre"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_phone_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_italic"
                            android:padding="10dp"
                            android:text="@string/getduma_call_center"
                            android:textColor="@color/Brown"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="OR"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="center"
                    android:background="@color/grey1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/grey1"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="Write us"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_mail_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_italic"
                            android:paddingBottom="@dimen/margin_10"
                            android:text="info@ridesharerates.com"
                            android:textColor="@color/Brown"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
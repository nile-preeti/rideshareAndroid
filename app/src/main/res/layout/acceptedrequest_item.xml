<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:elevation="@dimen/five"
        app:cardBackgroundColor="@color/grey4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/margin_10"
            android:background="@drawable/rounded_view"
            android:paddingBottom="@dimen/margin_10">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/username_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|start"
                        android:padding="1dp"
                        android:text="User Name"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_logo"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left|start"
                        android:padding="1dp"
                        android:text="dfdffd"
                        android:textColor="@color/Brown"
                        android:textFontWeight="500"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:padding="1dp"
                        android:text="23:45"
                        android:textColor="@color/green"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="right"
                        android:padding="1dp"
                        android:text="23/12/2002"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_layout"
                android:paddingTop="@dimen/margin_5">

                <View
                    android:id="@+id/view3_border"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/grey2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="vertical"
                    android:weightSum="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mappin_from"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_mappin_from" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/from_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left|start"
                                android:text="From"
                                android:textColor="@color/Brown"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/txt_from_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="left|start"
                                android:inputType="textMultiLine"
                                android:padding="1dp"
                                android:layout_marginEnd="5dp"
                                android:text="NewYork NY 10025"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView

                        android:id="@+id/img_arrow"
                        android:layout_width="@dimen/arrow"
                        android:layout_height="@dimen/arrow"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:src="@drawable/arrow1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mappin_to"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_mappin_to" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/to_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left|start"
                                android:text="To"
                                android:textColor="@color/Brown"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/txt_to_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:gravity="left|start"
                                android:inputType="textMultiLine"
                                android:padding="1dp"
                                android:layout_marginEnd="5dp"
                                android:text="Wooside NY 11104"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative_parent"
                android:background="@color/grey2" />

            <RelativeLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="@dimen/five"
                android:orientation="horizontal"
                android:weightSum="0">


                <View
                    android:id="@+id/img"
                    android:layout_width="@dimen/arrow"
                    android:layout_height="@dimen/arrow"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/five"
                    android:src="@drawable/arrow1"
                    android:visibility="gone" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/track_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/track_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Track"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/call_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Call"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reject_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/reject_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/reject_ride1"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stop_recording_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/reject_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/stop_recording_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Stop Recording"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pause_recording_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/pause_recording_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Pause"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recording_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/recording_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Start Recording"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navigate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/navigate_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Navigate"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/accept_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/accept_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/accept_ride1"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/start_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/accept_button"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/start_txt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/Start_Ride"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
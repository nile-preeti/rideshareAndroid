<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/form_outline_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_15">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/technical_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        app:indeterminateAnimationType="contiguous"
        app:indicatorColor="@array/progress_colors"
        app:indicatorSize="29dp" />

    <ImageView
        android:id="@+id/warn_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/txt_tech_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@id/warn_icon"
        android:fontFamily="@font/montserrat_bold"
        android:padding="@dimen/margin_5"
        android:text="@string/technical_issue"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/calling_layout_tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tech_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reason_layout_tech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calling_layout_tech"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/txt_reason"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@drawable/form_outline_background"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="top"
            android:hint="@string/please_write_reason"
            android:inputType="textMultiLine"
            android:padding="@dimen/margin_10"
            android:textColor="@color/white"
            android:textColorHint="@color/background_white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reason_layout_tech"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes_tech"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@drawable/accept_button"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:text="Yes"
            android:textColor="@color/white"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_tech"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/reject_button"
            android:backgroundTint="@color/red"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:padding="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:text="No"
            android:textColor="@color/white"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />


    </LinearLayout>


</RelativeLayout>
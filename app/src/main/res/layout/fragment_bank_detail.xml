<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:paddingRight="@dimen/margin_10"
    android:paddingLeft="@dimen/margin_10"
    android:background="@drawable/background_rideshare"
    tools:context=".fragement.BankDetailFragment">

        <ImageView
            android:id="@+id/tv_edit_bank_detail"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_profile"
            android:text="Edit"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10" />

        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="@dimen/margin_10"
            android:textStyle="normal"
            android:enabled="false"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Republic Bank &amp; Trust"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/rounded_view"
            android:textColorHint="@color/white"
            />
        <EditText
            android:id="@+id/et_account_holder"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/background_white"
            android:textStyle="normal"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Enter Account Holder Name"
            android:autofillHints="creditCardNumber"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/rounded_view"
            />
        <EditText
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="@dimen/margin_10"
            android:textStyle="normal"
            android:inputType="phone"
            android:enabled="false"
            android:hint="Account Number will be provided by RideshareRates"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/rounded_view"
            android:textColorHint="@color/background_white"
            />
        <EditText
            android:id="@+id/et_routing_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="@dimen/margin_10"
            android:textStyle="normal"
            android:inputType="number"
            android:textSize="14sp"
            android:hint="264171241"
            android:enabled="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/rounded_view"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="@string/bankDetail"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="@string/bankInfo"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="@dimen/margin_10"
                android:background="@drawable/accept_button"
                android:text="@string/submit"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/white" />




</LinearLayout>
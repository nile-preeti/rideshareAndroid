<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rideStatusLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/transparent"
        app:contentPadding="0dp">

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_10"
            android:background="@drawable/form_outline_background"
            android:paddingBottom="@dimen/margin_10">

            <ProgressBar
                android:id="@+id/progress_accept_ride"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:max="100"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:progressTint="@color/Brown"
                android:visibility="visible"

                />

            <RelativeLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:weightSum="0">

                <TextView
                    android:id="@+id/riderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="left|start"
                    android:padding="1dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="left|start"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="left|start"
                            android:padding="1dp"
                            android:text="Distance"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/rideDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="left|start"
                            android:padding="1dp"
                            android:text="12 miles"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/img"
                    android:layout_width="@dimen/arrow"
                    android:layout_height="@dimen/arrow"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/five"
                    android:src="@drawable/arrow1"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/img"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left|start"
                        android:padding="1dp"
                        android:text="Total fare"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:gravity="right|end" />

                    <TextView
                        android:id="@+id/rideFare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="right"
                        android:padding="1dp"
                        android:text="$125"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:orientation="horizontal"
                android:weightSum="0">

                <View
                    android:id="@+id/view3_border"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="vertical"
                    android:weightSum="0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mappin_from"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_mappin_from" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/from_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left|start"
                                android:text="From"
                                android:textColor="@color/white"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/txt_from_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="left|start"
                                android:inputType="textMultiLine"
                                android:paddingStart="1dp"
                                android:paddingTop="1dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="1dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </LinearLayout>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="@dimen/arrow"
                        android:layout_height="@dimen/arrow"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:src="@drawable/arrow1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mappin_to"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_mappin_to" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/to_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="left|start"
                                android:text="To"
                                android:textColor="@color/white"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/txt_to_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|start"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="15dp"
                                android:gravity="left|start"
                                android:inputType="textMultiLine"
                                android:paddingStart="1dp"
                                android:paddingTop="1dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="1dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/acceptRideLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/rejectBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/reject_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Reject"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/accepteBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/startRideLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:visibility="visible"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/cancelRideBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Cancel Ride"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/trackRideBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="GO"
                        android:visibility="visible"
                        android:backgroundTint="@color/greenOnline"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/callBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Call"
                        android:visibility="visible"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/startRideBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:background="@drawable/accept_button"
                        android:backgroundTint="@color/greenOnline"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Start Trip"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/complete_payment_pending_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/ride_has_been_completed_successfully"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_complete_amount_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="amount pending"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/completeRideLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:visibility="gone"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/stopRecordingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/reject_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Stop Recording"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/startRecordingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Start Recording"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/technicalIssueBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/reject_button"
                        android:backgroundTint="@color/Brown"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/techincal_issue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/navigateRideBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:backgroundTint="@color/greenOnline"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="GO"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/completeRideBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_button"
                        android:backgroundTint="@color/redOffline"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="End Trip"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/ratingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/form_outline_background"
        android:padding="@dimen/margin_20"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/ride_completed"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driver_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/experience"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/grey3"
            android:progressTint="@color/Brown"
            android:layout_marginTop="10dp"
            android:numStars="5" />

        <EditText
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_view_edit_text"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="Give a compliment"
            android:inputType="text"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doneBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/accept_button"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skipBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/reject_button"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

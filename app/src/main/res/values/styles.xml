<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="ActionMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@color/Brown</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/Brown</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/yellow_color</item>
        <item name="android:textColorSecondary">@color/yellow_color</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="tint">@color/yellow_color</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/Brown</item>
        <item name="android:colorControlNormal">@color/background_white</item>
    </style>

    <style name="StyleFormCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginVertical">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
    </style>

    <style name="BottomOptionsDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!--PLACE API-->
    <style name="PlacesAutocompleteBase" parent="Theme.AppCompat.NoActionBar">
        <item name="tint">@color/white</item>
        <item name="android:backgroundDimAmount">1.0</item>
    </style>

</resources>
